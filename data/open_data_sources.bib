@article{westcottDetectionPeriodicReemergence2022,
  title = {The {{Detection}} of {{Periodic Reemergence Events}} of {{SARS-CoV-2 Delta Strain}} in {{Communities Dominated}} by {{Omicron}}},
  author = {Westcott, Claire E. and Sokoloski, Kevin J. and Rouchka, Eric C. and Chariker, Julia H. and Holm, Rochelle H. and Yeager, Ray A. and Moore, Joseph B. and Elliott, Erin M. and Talley, Daymond and Bhatnagar, Aruni and Smith, Ted},

@article{rouchkaRapidAssessmentAggregated2021,
  title = {The {{Rapid Assessment}} of {{Aggregated Wastewater Samples}} for {{Genomic Surveillance}} of {{SARS-CoV-2}} on a {{City-Wide Scale}}},
  author = {Rouchka, Eric C. and Chariker, Julia H. and Saurabh, Kumar and Waigel, Sabine and Zacharias, Wolfgang and Zhang, Mei and Talley, Daymond and Santisteban, Ian and Puccio, Madeline and Moyer, Sarah and Holm, Rochelle H. and Yeager, Ray A. and Sokoloski, Kevin J. and Fuqua, Joshua and Bhatnagar, Aruni and Smith, Ted},
